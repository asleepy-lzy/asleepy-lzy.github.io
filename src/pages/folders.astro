---
import FolderTree from "@components/FolderTree.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getFolderTree } from "@utils/content-utils";

const tree = await getFolderTree();
---

<MainGridLayout title={i18n(I18nKey.folders)}>
	<div class="card-base px-6 py-5">
		<div class="text-3xl font-bold mb-5">{i18n(I18nKey.folders)}</div>
		<FolderTree node={tree} />
	</div>
</MainGridLayout>
